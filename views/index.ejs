<%- include('layout/header') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-dismissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>

      <div class="table-responsive">
        <% if (students != '') { %>
        <table class="table table-bordered table-striped text-center my-2">
          <thead>
            <tr class="table-dark">
              <th>#</th>
              <th>Image</th>
              <th>Name</th>
              <th>Class</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((row, index) => { %>
            <tr class="align-middle">
              <td><%= index+1 %></td>
              <td><img src="<%= row.image  %>" width="50" /></td>
              <td><%= row.name %></td>
              <td><%= row.std_class %></td>
              <td>
                <a href="/edit/<%= row._id %>" class="btn btn-success">
                  <i class="fas fa-edit fa-lg mx-1"></i>
                </a>

                <a
                  href="/delete/<%= row._id %>"
                  class="btn btn-danger"
                  onclick="return confirm('Are you sure?')"
                >
                  <i class="fas fa-trash-alt fa-lg mx-1"></i>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">No Students Found!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
