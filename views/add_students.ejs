<%- include('layout/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header">
          <h4 >Add New Student
            <a class="btn btn-danger float-end" href="/">Back</a>
          </h4>
        </div>
        <div class="card-body">
          <form
            action="/add"
            method="post"
            ,
            id="add-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                class="form-control"
                placeholder="Enter name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="age">Age</label>
              <input
                type="number"
                name="age"
                class="form-control"
                placeholder="Enter age"
                required
              />
            </div>
            <div class="mb-3">
              <label for="email">Email</label>
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Enter email"
                required
              />
            </div>
            <div class="mb-3">
              <label for="std_class">Std Class</label>
              <input
                type="text"
                name="std_class"
                class="form-control form-control-lg"
                placeholder="Enter student class"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Select image</label>
              <input
                type="file"
                name="image"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <input
                type="submit"
                name="submit"
                value="Add Student"
                class="btn btn-primary btn-lg"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
